<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BragantinaTelerikDemo.Portable.Views.LoginView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="64">
            <Image Source="login.png"></Image>
            <Entry Placeholder="Usuário" Text="{Binding Usuario}"></Entry>
            <Entry Placeholder="Senha" Text="{Binding Senha}" IsPassword="True"></Entry>
            <Button Text="Entrar" Command="{Binding EntrarCommand}"/>
            <Button Text="Entrar Facebook" Command="{Binding EntrarFBCommand}"/>

            <Label Text="Cadastrar" HorizontalOptions="Start" Margin="0,0,0,25">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TestCommand}" />
                </Label.GestureRecognizers>
            </Label>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>