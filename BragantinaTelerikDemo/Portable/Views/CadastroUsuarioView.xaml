<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BragantinaTelerikDemo.Portable.Views.CadastroUsuarioView"
             xmlns:behavior="clr-namespace:BragantinaTelerikDemo.Portable.Helpers"
             BackgroundColor="#FFFFFF">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">

                <Entry x:Name="Nome" Placeholder="Nome" Text="{Binding Nome}"/>
                <Entry x:Name="CPF" Placeholder="CPF" Keyboard="Numeric" Text="{Binding CPF}">
                    <Entry.Behaviors>
                        <behavior:MaskedBehavior Mask="XXX.XXX.XXX-XX" />
                    </Entry.Behaviors>
                </Entry>

                <Entry x:Name="Email" Placeholder="Email" Keyboard="Email" Text="{Binding Email}"/>

                <Entry x:Name="Senha" Placeholder="Senha" IsPassword="True" Text="{Binding Senha}"/>

                <Entry x:Name="Telefone" Placeholder="Telefone" Keyboard="Telephone" Text="{Binding Fone}">
                    <Entry.Behaviors>
                        <behavior:MaskedBehavior Mask="(XX) X XXXX-XXXX"/>
                    </Entry.Behaviors>
                </Entry>
                <!--<Entry x:Name="CEP" Placeholder="CEP" Text="{Binding Cep}" Keyboard="Numeric"/>
                <Entry x:Name="Endereco" Placeholder="Endereço" Text="{Binding Endereco}"/>
                <Entry x:Name="Numero" Placeholder="Número" Text="{Binding Numero}"/>
                <Entry x:Name="Bairro" Placeholder="Bairro" Text="{Binding Bairro}"/>-->
                <Entry x:Name="UF" Placeholder="UF" Text="{Binding UF}"/>
                <Entry x:Name="Cidade" Placeholder="Cidade" Text="{Binding Cidade}"/>
                <Button Text="Cadastrar" Command="{Binding CadastrarCommand}" TextColor="#FFFFFF" 
             BackgroundColor="#282828" BorderRadius="10" FontSize="14" FontAttributes="Bold"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>